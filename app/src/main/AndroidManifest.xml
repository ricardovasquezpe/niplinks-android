<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nippylinks.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectProviderActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".LoginActivity"
            android:configChanges="keyboardHidden|screenSize" />
        <activity
            android:name=".SignUpEmailActivity"
            android:configChanges="keyboardHidden|screenSize" />
        <activity
            android:name=".SignUpProfileActivity"
            android:configChanges="keyboardHidden|screenSize" />
        <activity
            android:name=".SignUpPinActivity"
            android:configChanges="keyboardHidden|screenSize" />
        <activity
            android:name=".DashboardActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".LinksActivity"
            android:configChanges="keyboardHidden|screenSize" />
        <activity
            android:name=".SettingsActivity"
            android:configChanges="keyboardHidden|screenSize" />
        <activity
            android:name=".CustomLinksActivity"
            android:configChanges="keyboardHidden|screenSize" />
        <activity
            android:name=".ProvidersActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="keyboardHidden|screenSize" />
        <activity
            android:name=".CreateCustomLinkActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".LoginLinkActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"/>
    </application>

</manifest>